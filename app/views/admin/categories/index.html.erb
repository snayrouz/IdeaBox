<div class="container-fluid">
<h1>All Categories</h1>

<table class="table text-left table-striped table-bordered">
  <thead>
    <th>Idea Categories</th>
    <tbody>
  <tr><% @categories.each do |category| %></tr>
    <td><%= link_to category.name, admin_category_path(category) %><br></td>
    <td><button type="button" class="btn btn-light"><%= link_to "Edit", edit_admin_category_path(category) %></button></td>
    <td><button type="button" class="btn btn-outline-warning"><%= link_to "Delete", admin_category_path(category), method: :delete, data: { confirm: 'Are you sure you want to delete this category?' } %></button></td>
  <% end %>
</tbody>
</thead>
</table>


</div>
