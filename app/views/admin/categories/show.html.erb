<%= render partial: 'admin/categories/nav' %>

<div class="container-fluid">
  <table class="table table-striped text-left table-bordered">
  <h3><%= @category.name %> Category</h3>
    <thead>
      <tr>
        <th>Idea</th>
        <th>Description</th>
      </tr>
        <tbody>
      <tr><% @category.ideas.each do |idea| %></tr>
        <td><%= link_to idea.title, user_idea_path(idea.category, idea) %></td>
        <td><%= idea.description %></td>
        <% end %>
      </tbody>
    </thead>
  </table>
<br>
</div>
