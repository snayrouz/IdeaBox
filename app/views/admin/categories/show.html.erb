<div class="container-fluid">
  <nav class="navbar navbar-expand navbar-dark bg-dark" role="navigation">
  <div class="container-fluid">
    <a href="/" class = "navbar-brand">IDEABOX</a>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if current_user.role == "admin" %>
        <li><%= link_to "Categories", admin_categories_path %></li>
        <li><%= link_to "Upload Images", new_admin_image_path %></li>
        <% end %>
        <% if logged_in? %>
          <li><%= link_to "Logout", logout_path, method: :delete %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
  <table class="table table-striped text-left table-bordered">
    <thead>
      <th><%= @category.name %></th>
        <tbody>
      <tr><% @category.ideas.each do |idea| %></tr>
        <td><%= link_to idea.title, user_idea_path(idea.category, idea) %></td>
        <% end %>
      </tbody>
    </thead>
  </table>
<br>
</div>
