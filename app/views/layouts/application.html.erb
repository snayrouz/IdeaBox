<!DOCTYPE html>
<html>
  <head>
    <title>IdeaBox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
  <footer>
    <% if logged_in? %>
      <%= link_to "Logout", logout_path, method: :delete %>
    <% end %>
  </footer>
</html>
