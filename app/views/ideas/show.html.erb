<table class="table table-hover text-left">
  <thead>
    <tr>

     <th><h3>Idea</h3></th>
      <th><h3>Category</h3></th>
        <th><h3>Edit</h3></th>
        <th><h3>Delete</h3></th>
      </tr>
    </thead>
    <tbody>

<% @user.ideas.each do |idea| %>

<tr>
  <td><h4><%= link_to idea.idea, user_idea_path(idea.user, idea) %> </h4></td>

  <td><h4><%= idea.category.name %></h4></td>

  <td><h4><%= link_to "Edit", edit_user_idea_path(idea.user, idea), class: "btn btn-primary" %></h4></td>

  <td><h4><%= link_to "Delete", user_idea_path(idea.user, idea), method: :delete, class: "btn btn-danger"%></h4></td>

</tr>
<% end %>
</tbody>
</table>
